{
  "version": "1.0.0",
  "description": "Secret detection patterns for LLMSEC LITE",
  "patterns": [
    {
      "id": "aws_access_key",
      "name": "AWS Access Key",
      "pattern": "AKIA[0-9A-Z]{16}",
      "severity": "critical"
    },
    {
      "id": "aws_secret_key",
      "name": "AWS Secret Key",
      "pattern": "(?i)(aws_secret_access_key|aws_secret_key|secret_key)\\s*[=:]\\s*['\"]?([A-Za-z0-9/+=]{40})['\"]?",
      "severity": "critical"
    },
    {
      "id": "github_token",
      "name": "GitHub Token",
      "pattern": "ghp_[a-zA-Z0-9]{36}",
      "severity": "critical"
    },
    {
      "id": "github_oauth",
      "name": "GitHub OAuth",
      "pattern": "gho_[a-zA-Z0-9]{36}",
      "severity": "critical"
    },
    {
      "id": "github_app_token",
      "name": "GitHub App Token",
      "pattern": "ghu_[a-zA-Z0-9]{36}",
      "severity": "critical"
    },
    {
      "id": "github_refresh_token",
      "name": "GitHub Refresh Token",
      "pattern": "ghr_[a-zA-Z0-9]{36}",
      "severity": "critical"
    },
    {
      "id": "openai_key",
      "name": "OpenAI API Key",
      "pattern": "sk-[a-zA-Z0-9]{48,}",
      "severity": "critical"
    },
    {
      "id": "anthropic_key",
      "name": "Anthropic API Key",
      "pattern": "sk-ant-[a-zA-Z0-9\\-]{32,}",
      "severity": "critical"
    },
    {
      "id": "stripe_live_key",
      "name": "Stripe Live API Key",
      "pattern": "sk_live_[a-zA-Z0-9]{24,}",
      "severity": "critical"
    },
    {
      "id": "stripe_test_key",
      "name": "Stripe Test API Key",
      "pattern": "sk_test_[a-zA-Z0-9]{24,}",
      "severity": "medium"
    },
    {
      "id": "stripe_publishable_key",
      "name": "Stripe Publishable Key",
      "pattern": "pk_(live|test)_[a-zA-Z0-9]{24,}",
      "severity": "low"
    },
    {
      "id": "generic_api_key",
      "name": "Generic API Key",
      "pattern": "(?i)(api[_-]?key|apikey)\\s*[=:]\\s*['\"]?([a-zA-Z0-9_\\-]{16,})['\"]?",
      "severity": "high"
    },
    {
      "id": "generic_secret",
      "name": "Generic Secret",
      "pattern": "(?i)(secret|token|password|passwd|pwd)\\s*[=:]\\s*['\"]?([^\\s'\"]{8,})['\"]?",
      "severity": "high"
    },
    {
      "id": "private_key_rsa",
      "name": "RSA Private Key",
      "pattern": "-----BEGIN RSA PRIVATE KEY-----",
      "severity": "critical"
    },
    {
      "id": "private_key_dsa",
      "name": "DSA Private Key",
      "pattern": "-----BEGIN DSA PRIVATE KEY-----",
      "severity": "critical"
    },
    {
      "id": "private_key_ec",
      "name": "EC Private Key",
      "pattern": "-----BEGIN EC PRIVATE KEY-----",
      "severity": "critical"
    },
    {
      "id": "private_key_openssh",
      "name": "OpenSSH Private Key",
      "pattern": "-----BEGIN OPENSSH PRIVATE KEY-----",
      "severity": "critical"
    },
    {
      "id": "private_key_pgp",
      "name": "PGP Private Key",
      "pattern": "-----BEGIN PGP PRIVATE KEY BLOCK-----",
      "severity": "critical"
    },
    {
      "id": "jwt_token",
      "name": "JWT Token",
      "pattern": "eyJ[a-zA-Z0-9_-]{10,}\\.eyJ[a-zA-Z0-9_-]{10,}\\.[a-zA-Z0-9_-]{10,}",
      "severity": "high"
    },
    {
      "id": "mongodb_uri",
      "name": "MongoDB Connection String",
      "pattern": "mongodb(\\+srv)?://[^\\s]+",
      "severity": "critical"
    },
    {
      "id": "postgres_uri",
      "name": "PostgreSQL Connection String",
      "pattern": "postgres(ql)?://[^\\s]+",
      "severity": "critical"
    },
    {
      "id": "mysql_uri",
      "name": "MySQL Connection String",
      "pattern": "mysql://[^\\s]+",
      "severity": "critical"
    },
    {
      "id": "redis_uri",
      "name": "Redis Connection String",
      "pattern": "redis://[^\\s]+",
      "severity": "high"
    },
    {
      "id": "slack_token",
      "name": "Slack Token",
      "pattern": "xox[baprs]-[0-9]{10,}-[0-9]{10,}-[a-zA-Z0-9]{24}",
      "severity": "critical"
    },
    {
      "id": "slack_webhook",
      "name": "Slack Webhook",
      "pattern": "https://hooks\\.slack\\.com/services/T[A-Z0-9]+/B[A-Z0-9]+/[a-zA-Z0-9]+",
      "severity": "high"
    },
    {
      "id": "google_api_key",
      "name": "Google API Key",
      "pattern": "AIza[0-9A-Za-z\\-_]{35}",
      "severity": "critical"
    },
    {
      "id": "google_oauth",
      "name": "Google OAuth Token",
      "pattern": "ya29\\.[0-9A-Za-z\\-_]+",
      "severity": "critical"
    },
    {
      "id": "firebase_key",
      "name": "Firebase Key",
      "pattern": "AAAA[A-Za-z0-9_-]{7}:[A-Za-z0-9_-]{140}",
      "severity": "critical"
    },
    {
      "id": "twilio_api_key",
      "name": "Twilio API Key",
      "pattern": "SK[a-f0-9]{32}",
      "severity": "critical"
    },
    {
      "id": "sendgrid_api_key",
      "name": "SendGrid API Key",
      "pattern": "SG\\.[a-zA-Z0-9]{22}\\.[a-zA-Z0-9]{43}",
      "severity": "critical"
    },
    {
      "id": "mailgun_api_key",
      "name": "Mailgun API Key",
      "pattern": "key-[a-zA-Z0-9]{32}",
      "severity": "critical"
    },
    {
      "id": "npm_token",
      "name": "NPM Access Token",
      "pattern": "npm_[a-zA-Z0-9]{36}",
      "severity": "critical"
    },
    {
      "id": "heroku_api_key",
      "name": "Heroku API Key",
      "pattern": "[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}",
      "severity": "high",
      "context_required": true
    },
    {
      "id": "azure_storage_key",
      "name": "Azure Storage Key",
      "pattern": "DefaultEndpointsProtocol=https;AccountName=[^;]+;AccountKey=[^;]+",
      "severity": "critical"
    },
    {
      "id": "digitalocean_token",
      "name": "DigitalOcean Token",
      "pattern": "dop_v1_[a-f0-9]{64}",
      "severity": "critical"
    },
    {
      "id": "discord_token",
      "name": "Discord Bot Token",
      "pattern": "[MN][A-Za-z\\d]{23,}\\.[\\w-]{6}\\.[\\w-]{27}",
      "severity": "critical"
    }
  ]
}
